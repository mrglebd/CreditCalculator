@model CreditCalculator.Models.CreditInputModel

@{
    ViewData["Title"] = "Кредитный калькулятор";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Calculate" method="post">
                    <div class="mb-4">
                        <label asp-for="LoanAmount" class="form-label fs-5 fw-semibold"></label>
                        <input asp-for="LoanAmount" class="form-control form-control-lg" placeholder="Введите сумму займа" value="" pattern="^\d{1,8}([\.,]\d{0,2})?$" inputmode="decimal" />
                        <span asp-validation-for="LoanAmount" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="RateType" class="form-label fs-5 fw-semibold">Тип ставки</label>
                        <select asp-for="RateType" class="form-select form-select-lg" id="rateType">
                            <option value="">-- Выберите тип ставки --</option>
                            <option value="Annual">Годовая</option>
                            <option value="Daily">Дневная</option>
                        </select>
                        <span asp-validation-for="RateType" class="text-danger small"></span>
                    </div>

                    <div class="mb-4" id="annualFields" style="display: none;">
                        <label asp-for="LoanTermMonths" class="form-label fs-5 fw-semibold">Срок займа (в месяцах)</label>
                        <input asp-for="LoanTermMonths" class="form-control form-control-lg" type="number" min="1" step="1" />
                        <span asp-validation-for="LoanTermMonths" class="text-danger small"></span>

                        <label asp-for="AnnualInterestRate" class="form-label fs-5 fw-semibold mt-3">Годовая ставка (%)</label>
                        <input asp-for="AnnualInterestRate" class="form-control form-control-lg" type="text" inputmode="decimal" pattern="^\d{1,3}([.,]\d{1,2})?$" />
                        <span asp-validation-for="AnnualInterestRate" class="text-danger small"></span>
                    </div>

                    <div class="mb-4" id="dailyFields" style="display: none;">
                        <label asp-for="LoanTermDays" class="form-label fs-5 fw-semibold">Срок займа (в днях)</label>
                        <input asp-for="LoanTermDays" class="form-control form-control-lg" type="number" min="1" step="1" />
                        <span asp-validation-for="LoanTermDays" class="text-danger small"></span>

                        <label asp-for="DailyInterestRate" class="form-label fs-5 fw-semibold mt-3">Ставка в день (%)</label>
                        <input asp-for="DailyInterestRate" class="form-control form-control-lg" type="text" inputmode="decimal" pattern="^\d{1,3}([.,]\d{1,2})?$" />
                        <span asp-validation-for="DailyInterestRate" class="text-danger small"></span>

                        <label asp-for="PaymentStepDays" class="form-label fs-5 fw-semibold mt-3">Шаг платежа (в днях)</label>
                        <input asp-for="PaymentStepDays" class="form-control form-control-lg" type="number" min="1" step="1" />
                        <span asp-validation-for="PaymentStepDays" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Рассчитать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const rateTypeSelect = document.getElementById("rateType");
            const annualFields = document.getElementById("annualFields");
            const dailyFields = document.getElementById("dailyFields");

            function updateVisibility() {
                const selected = rateTypeSelect.value;
                annualFields.style.display = selected === "Annual" ? "block" : "none";
                dailyFields.style.display = selected === "Daily" ? "block" : "none";
            }
            rateTypeSelect.addEventListener("change", updateVisibility);
            updateVisibility();

            // Маска для суммы займа (2 знака после запятой)
            const loanAmountInput = document.querySelector('[name="LoanAmount"]');
            if (loanAmountInput) {
                loanAmountInput.addEventListener('input', function () {
                    let val = this.value.replace(/,/g, '.');
                    val = val.replace(/[^\d.]/g, '');
                    const parts = val.split('.');
                    if (parts.length > 2) {
                        val = parts[0] + '.' + parts.slice(1).join('');
                    }
                    if (parts[1]) {
                        parts[1] = parts[1].slice(0, 2);
                        val = parts[0] + '.' + parts[1];
                    }
                    this.value = val;
                });
            }

            // Только целые числа, блокируем точку/запятую для сроков и шага платежа
            const intInputs = [
                document.querySelector('[name="LoanTermMonths"]'),
                document.querySelector('[name="LoanTermDays"]'),
                document.querySelector('[name="PaymentStepDays"]')
            ];
            intInputs.forEach(function(input) {
                if (input) {
                    input.addEventListener('keydown', function(e) {
                        if ([".", ","].includes(e.key)) {
                            e.preventDefault();
                        }
                    });
                    input.addEventListener('input', function () {
                        this.value = this.value.replace(/[^\d]/g, '');
                    });
                }
            });

            // Маска для ставок (2 знака после запятой, 0-100)
            const rateInputs = [
                document.querySelector('[name="AnnualInterestRate"]'),
                document.querySelector('[name="DailyInterestRate"]')
            ];
            rateInputs.forEach(function(input) {
                if (input) {
                    input.addEventListener('input', function () {
                        let val = this.value.replace(/,/g, '.');

                        // Удаляем все кроме цифр и одной точки
                        let parts = val.split('.');
                        if (parts.length > 2) {
                            // Оставляем только первую точку
                            val = parts[0] + '.' + parts.slice(1).join('');
                        }

                        // Ограничиваем два знака после точки, если есть дробная часть
                        if (val.includes('.')) {
                            const [intPart, decimalPart] = val.split('.');
                            val = intPart + '.' + decimalPart.slice(0, 2);
                        }

                        // Если это валидное число — проверяем границы
                        if (/^\d+(\.\d{0,2})?$/.test(val)) {
                            const num = parseFloat(val);
                            if (!isNaN(num)) {
                                if (num < 0) val = '0';
                                if (num > 100) val = '100';
                            }
                        }

                        this.value = val;
                    });

                }
            });
        });
    </script>
}